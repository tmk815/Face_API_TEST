<Window x:Class="MyFirstApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Title="MainWindow" Height="511" Width="1003.763">
    <Grid x:Name="BackPanel">
        <Image x:Name="FacePhoto" Stretch="Uniform" Margin="203,0,0,30"/>
        <Button x:Name="BrowseButton" Margin="20,5" Height="20"         
                VerticalAlignment="Bottom" Content="Browse..."                
                Click="BrowseButton_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="429" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Age_Face}" VerticalAlignment="Top" Width="193" RenderTransformOrigin="-0.463,-0.448"/>
    </Grid>
</Window>